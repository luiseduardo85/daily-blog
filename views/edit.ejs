<h2 class="edit-title">Edit Post</h2>
<form class="edit-form" action="/update/<%= post.id %>" method="POST">
    <div class="new-post">
        <label class="label-title" for="title">Titulo:</label>
        <input id="title" class="edit-title-input" type="text" name="title" value="<%= post.title %>" required>
        <label class="label-title" for="edit-content">Conte√∫do:</label><br>
        <textarea id="post-content" name="text" rows="4" required><%= post.content %></textarea>
        <button class="delete btn edit-btn" type="submit">Editar</button>
    </div>
</form>

